#

init
set workers to 0
set workers_upload to 0
set interval to 10
set serial to false
set uuid to '00000000-0000-0000-0000-000000000000'
set sync to false
open

# test: rebalance (no pipeline set)
rebalance
show storages debug

# test: create storages
create storage hot
create storage cold

# test: alter pipeline set partitions
alter pipeline set hot (partitions 2), cold
show pipeline

# test: rebalance #1 (empty, <= partitions)
rebalance
show storages debug

# test: rebalance #2 (< partitions)
insert 0
rebalance
show storages debug

# test: rebalance #3 (= partitions)
insert 10
rebalance
show storages debug

# test: rebalance #4 (> partitions)
insert 20
show storages debug
rebalance
show storages debug

# test: rebalance #5 (more then one, > partitions)
insert 30
insert 40
insert 500
insert 600
show storages debug
rebalance
show storages debug

select

# test: alter pipeline set partitions zero
alter pipeline set hot (partitions 0)
show pipeline

# test: rebalance (auto drop)
show storages debug
rebalance
show storages debug

# test: alter pipeline set partitions zero #2 (chain)
alter pipeline set hot (partitions 2), cold (partitions 0)
show pipeline

# test: rebalance #1 (auto drop existing)
show storages debug
rebalance
show storages debug

# test: rebalance #2 (auto drop)
insert 0
rebalance
show storages debug

# test: rebalance #3 (auto drop)
insert 10
rebalance
show storages debug
select

# test: rebalance #4 (auto drop from cold)
insert 20
rebalance
show storages debug
select

close
